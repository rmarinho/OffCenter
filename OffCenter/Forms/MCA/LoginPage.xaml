<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MCA.LoginPage">
	<ContentPage.Content>
		<Grid HorizontalOptions="Center" Margin="0,100,0,0" RowSpacing="10">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="40" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Image Grid.Row="0" Source="logo_mobile_center" Aspect="AspectFill" />
			<Entry Margin="20,0,20,0" Grid.Row="2" Text="{Binding Username}" Placeholder="username" VerticalOptions="Center" />
			<Entry Margin="20,0,20,0" Grid.Row="3" Text="{Binding Password}" Placeholder="password" IsPassword="true" VerticalOptions="Center" />
			<Button Grid.Row="4" Text="login" TextColor="White" Command="{Binding LoginCommand}" />
		</Grid>
	</ContentPage.Content>
</ContentPage>