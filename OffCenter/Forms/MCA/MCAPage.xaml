<?xml version="1.0" encoding="utf-8"?>
<ContentPage Title="Apps" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:MCA" x:Class="MCA.MCAPage">
	<ListView ItemsSource="{Binding Apps}" CachingStrategy="RecycleElement" RowHeight="60">
		<ListView.ItemTemplate>
			<DataTemplate>
				<ViewCell>
					<Grid Padding="15,0,15,0" RowSpacing="0" ColumnSpacing="10">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition />
							<ColumnDefinition />
							<ColumnDefinition Width="20" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition />
							<RowDefinition />
						</Grid.RowDefinitions>
						<Image Source="{Binding Icon}" Grid.Column="0" Grid.RowSpan="2" />
						<Label Text="{Binding IconText}" TextColor="{Binding IconTextColor}" Grid.Column="0" Grid.RowSpan="2" HorizontalOptions="Center" VerticalOptions="Center" />
						<Label Text="{Binding Name}" Grid.Column="1" FontSize="12" FontAttributes="Bold" VerticalOptions="End" />
						<Label Text="{Binding Detail}" VerticalOptions="Start" FontSize="11" TextColor="Gray" Grid.Row="1" Grid.Column="1" />
					</Grid>
				</ViewCell>
			</DataTemplate>
		</ListView.ItemTemplate>
	</ListView>
</ContentPage>